{
    "compilerOptions": {
        "lib": ["es6"],
        "moduleResolution": "node",
        "module": "commonjs",
        "composite": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "outDir": "./dist/",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"],
            "src/*": ["./src/*"]
        },
        "skipLibCheck": true,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": ["node_modules/@types"]
    },
    "include": [
        "**/*.ts"
    ],
    "exclude": [
        "node_modules", 
        "dist"
    ]
}
